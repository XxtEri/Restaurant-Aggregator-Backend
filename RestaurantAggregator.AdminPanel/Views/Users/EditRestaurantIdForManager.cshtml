@model ChangeRestaurantIdModel

@{
    ViewBag.Title = "Edit Restaurant Id For Manager";
}

<h1>Изменение ресторана, где работает менеджер</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRestaurantIdForManager" method="post" asp-route-id="@Model.UserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label"></label>
                <input asp-for="RestaurantId" class="form-control" />
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div style="padding: 10px"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding: 5px"></div>
<div>
    <a asp-action="Details" asp-route-id="@Model.UserId">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

